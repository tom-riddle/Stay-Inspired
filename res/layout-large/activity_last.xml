<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/linebg"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context="com.stayinspired.LastActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/finalhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:fontFamily="BebasNeue"
            android:textColor="#000"
            android:textSize="19dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="TDHCondensed"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#6E2126"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:padding="8dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/sharebutton1"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/round"
                android:fontFamily="BebasNeue"
                android:onClick="share23"
                android:padding="1dp"
                android:shadowColor="#A87A60"
                android:text="@string/share123"
                android:textColor="#fff"
                android:textSize="26sp" />

            <Button
                android:id="@+id/sharebutton134"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/round"
                android:fontFamily="BebasNeue"
                android:onClick="quiz7"
                android:padding="1dp"
                android:shadowColor="#A87A60"
                android:text="@string/quiz1"
                android:textColor="#fff"
                android:textSize="26sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>